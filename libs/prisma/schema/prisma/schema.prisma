generator client {
  provider        = "prisma-client-js"
  moduleFormat    = "esm"
  output= "../../../../node_modules/.prisma/client"
  engineType      = "client"
  previewFeatures = ["relationJoins", "strictUndefinedChecks", "typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator json {
  provider = "prisma-json-types-generator"
}

